<%- include('../../fragments/header.ejs')%>
<main>
    <h2>Lista lekarzów</h2>
    <table class="table-list">
        <thead>
        <th>Imię</th>
        <th>Nazwisko</th>
        <th>E-mail</th>
        <th class="akcjeColumn">Akcje</th>
        </thead>
        <tbody>
        <%for (let lekarz of lekarze) { %>
            <tr>
                <td><%= lekarz.firstName %></td>
                <td><%= lekarz.lastName %></td>
                <td><%= lekarz.email %></td>
                <td>
                    <ul class="list-actions">
                        <li><a href="/lekarz/details/<%=lekarz._id%>" class="list-actions-button-details">Szczegóły</a></li>
                        <li><a href="/lekarz/edit/<%=lekarz._id%>" class="list-actions-button-edit">Edytuj</a></li>
                        <li><a href="/lekarz/delete/<%=lekarz._id%>" class="list-actions-button-delete">Usuń</a></li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <p><a href="lekarz/add/" class="button-add">Dodaj nowego pracownika</a> </p>

</main>
<%- include('../../fragments/footer.ejs')%>